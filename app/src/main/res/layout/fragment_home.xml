<?xml version="1.0" encoding="utf-8"?>
<!-- 홈화면 레이아웃  -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- 사용자 로고  -->
        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="오늘도 힘차게!"
            android:textColor="@color/text_dark"
            app:layout_constraintBottom_toTopOf="@id/home_title"
            app:layout_constraintStart_toEndOf="@id/iv_user"
            app:layout_constraintTop_toTopOf="@id/iv_user"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자님, 오늘도 달려볼까요?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            app:layout_constraintBottom_toBottomOf="@id/iv_user"
            app:layout_constraintStart_toStartOf="@id/home_greeting"
            app:layout_constraintTop_toBottomOf="@id/home_greeting" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_weekly_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#F0F0F0"
            app:layout_constraintTop_toBottomOf="@id/iv_user">

            <!-- 주간 러닝 기록 그래프  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_background"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="WEEKLY PROGRESS"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_chart" />
                </RelativeLayout>

                <com.project.bingo.ui.home.WeeklyBarChartView
                    android:id="@+id/weekly_chart_view"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 러닝 페이지로 넘어가는 버튼  -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_running"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:text="▶  지금 바로 러닝 시작하기"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/card_weekly_progress" />

        <!-- 평균 기록 카드  -->
        <LinearLayout
            android:id="@+id/layout_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btn_start_running">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F8F9FA">

                <!-- 평균 페이스  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_face_black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="평균 페이스"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_avg_pace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0'00"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F8F9FA">

                <!-- 평균 소모 칼로리  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fire_red" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="평균 소모 칼로리"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_avg_calories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 kcal"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_recommend_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layout_stats">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="추천 코스"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <!-- 추천 코스 전체 보기 페이지로 넘어가는 버튼  -->
            <Button
                android:id="@+id/btn_see_all"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체 보기"
                android:textColor="#999999" />
        </LinearLayout>

        <!-- 추천 루트 가로 스크롤 카드뷰  -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recommended_routes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layout_recommend_header"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>