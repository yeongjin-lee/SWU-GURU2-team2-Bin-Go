<?xml version="1.0" encoding="utf-8"?>
<!-- 캘린더 페이지 레이아웃  -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="러닝 캘린더"
            android:textColor="#1A1C1E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="#F1F3F5"
            app:strokeWidth="1dp">

            <!-- 캘린더  -->
            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:mcv_selectionColor="#E9ECEF"
                app:mcv_showOtherDates="all" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_selected_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#E9F1F5"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <!-- 선택된 날짜 기록 카드  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_selected_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1월 17일"
                    android:textStyle="bold"
                    android:textColor="#868E96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_selected_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 km"
                    android:textColor="#1A1C1E"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_selected_date" />

                <ImageView
                    android:id="@+id/iv_timer"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_timer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_selected_distance" />

                <TextView
                    android:id="@+id/tv_selected_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="00:00"
                    android:textColor="#1A1C1E"
                    app:layout_constraintBottom_toBottomOf="@id/iv_timer"
                    app:layout_constraintStart_toEndOf="@id/iv_timer"
                    app:layout_constraintTop_toTopOf="@id/iv_timer" />

                <ImageView
                    android:id="@+id/iv_pace"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_face_blue"
                    app:layout_constraintBottom_toBottomOf="@id/iv_timer"
                    app:layout_constraintStart_toEndOf="@id/tv_selected_duration"
                    app:layout_constraintTop_toTopOf="@id/iv_timer" />

                <TextView
                    android:id="@+id/tv_selected_pace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="0'00"
                    android:textColor="#1A1C1E"
                    app:layout_constraintBottom_toBottomOf="@id/iv_pace"
                    app:layout_constraintStart_toEndOf="@id/iv_pace"
                    app:layout_constraintTop_toTopOf="@id/iv_pace" />

                <ImageView
                    android:id="@+id/btn_go_detail"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_button_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 월간 통계  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="월간 통계"
            android:textColor="#1A1C1E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#F1F3F5"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <!-- 총 거리  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 거리"
                        android:textStyle="bold"
                        android:textColor="#495057"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_monthly_total_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0.0 km"
                        android:textColor="#1A1C1E"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#F1F3F5"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <!-- 평균 페이스  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평균 페이스"
                        android:textStyle="bold"
                        android:textColor="#495057"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_monthly_avg_pace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0'00"
                        android:textColor="#1A1C1E"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#F1F3F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <!-- 이번달 최장거리 러닝  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_longest_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번달 최장 거리 러닝"
                    android:textColor="#495057"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_longest_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0.0 km"
                    android:textColor="#1A1C1E"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_longest_title" />

                <TextView
                    android:id="@+id/tv_longest_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="-"
                    android:textColor="#868E96"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_longest_distance"
                    app:layout_constraintStart_toEndOf="@id/tv_longest_distance"
                    app:layout_constraintTop_toTopOf="@id/tv_longest_distance" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_leaf"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>